{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "./dist/",
        "rootDir": "src",
        "sourceMap": true,
        "moduleResolution": "node",
        "types": ["node", "shelljs", "js-yaml"],
        "target": "es6"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
